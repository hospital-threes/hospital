.table {
 border: 1px solid #ccc;
 font-size: 28rpx;
 background: #fff;
 border-right: none;
}
  
.tr{
 display: flex;
 justify-content: space-between;
}
  
.td {
 border: 1px solid #ccc;
 display: inline-block;
 border-left: none;
 border-bottom: none;
 padding: 10rpx 3%;
 width: 50%;
}
  
.thead .td{
 border-top: none;
 height: 60rpx;
 line-height: 50rpx;
 font-size: 26rpx;
 font-weight:bolder;
}